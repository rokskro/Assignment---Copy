@model UserLoginViewModel



<div class="d-flex justify-content-center">
    <div class="card shadow rounded p-4 align-items-center" style ="width: 28rem;">
    
        <div class="card-body">
            <h3 class="mb-3 text-center">Login</h3>

            <form asp-action="Login" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="input-group mb-3 justify-content-center">
                    <span class="input-group-text" id="email-icon">
                        <i class="bi bi-envelope"></i>
                    </span>
                    <input asp-for="Email" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="email-icon">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="input-group mb-3 justify-content-center">
                    <span class="input-group-text" id="login-icon">
                        <i class="bi bi-key"></i>
                    </span>
                    <input type="password" asp-for="Password" placeholder="Password" aria-label="Password" class="form-control" aria-describedby="login-icon" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center">
                    <div class="mt-1">
                        <input type="submit" value="Login" class="btn btn-warning" />
                        <a class="btn btn-dark" asp-controller="Home" asp-action="Index">Cancel</a>
                    </div>
                </div>
                <p class="text-sm-center"> 
                    Need a account? <a asp-controller="User" asp-action="Register">Register here</a>
                </p>

            </form>
        </div>
    </div>
</div>



@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
