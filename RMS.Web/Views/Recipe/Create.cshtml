@model Recipe

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("/recipe","Recipes"),
    ("","Create")
}) />

<div class="card shadow rounded p-4">
    <h3>Create Recipe</h3>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- name -->
        <div class="mt-3">
            <label asp-for="Name" class="form-label">Recipe name</label>
            <input asp-for="Name" class="form-control"/>
            <span  asp-validation-for="Name" class="text-danger"></span>
        </div>
    
        <!-- cuisine & Diet-->
        <div class="row mt-3">
            <div class="col">
                <label asp-for="Cuisine" class="form-label">Cuisine</label>
                <input asp-for="Cuisine" class="form-control"/>
                <span asp-validation-for="Cuisine" class="text-danger"></span>
            </div>

            <div class="col">
                <label asp-for="Diet" class="form-label">Diet</label>
                <input asp-for="Diet" class="form-control"/>
                <span asp-validation-for="Diet" class="text-danger"></span>
            </div>
        </div>

        <!--difficulty & cooking time -->      
        <div class="row mt-3">
            <div class="col">
                <label asp-for="CookTime" class="form-label">Cooking Time</label>
                <input asp-for="CookTime" class="form-control"/>
                <span asp-validation-for="CookTime" class="text-danger"></span>
            </div>

            <div class="col">
                <label asp-for="Difficulty" class="form-label">Difficulty [ 1-Easy | 2-Medium | 3-Hard ] </label>
                <input asp-for="Difficulty" class="form-control"/>
                <span  asp-validation-for="Difficulty" class="text-danger"></span>
            </div>
        </div>

        <!-- Ingredients -->
        <div class="mt-3">
            <label asp-for="Ingredients" class="form-label">Ingredients:</label>
            <textarea rows="5" asp-for="Ingredients" class="form-control"></textarea>
            <span  asp-validation-for="Ingredients" class="text-danger"></span>
        </div>

        <!-- Instructions -->
        <div class="mt-3">
            <label asp-for="Instructions" class="form-label">Instructions:</label>
            <textarea rows="5" asp-for="Instructions" class="form-control"></textarea>
            <span  asp-validation-for="Instructions" class="text-danger"></span>
        </div>

        <!-- Flavour text -->
        <div class="mt-3">
            <label asp-for="FlavourTxt" class="form-label">Recipe flavour text</label>
            <textarea rows="2" asp-for="FlavourTxt" class="form-control"></textarea>
            <span  asp-validation-for="FlavourTxt" class="text-danger"></span>
        </div>

        <!-- image -->
        <div class="mt-3">
            <label asp-for="ImageUrl" class="form-label">Image</label>
            <input asp-for="ImageUrl" type="url" class="form-control"/>
            <span  asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
    
        <div class="mt-3">
            <button type="submit" class="btn btn-warning" aria-label="create">Create</button>
            <a class="btn btn-dark" asp-action="Index" aria-label="cancel">Cancel</a>
        </div>
    </form>
</div>






@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}