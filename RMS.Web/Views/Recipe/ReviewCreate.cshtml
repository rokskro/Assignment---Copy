@model Review

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("/recipe","Recipes"),
    ($"/recipe/details/{Model.RecipeId}",$"{Model.RecipeId}"),
    ("","Create Review")
}) />



<div class="card shadow rounded p-4">
    <h3>Create Review</h3>

    <form asp-action="ReviewCreate">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
        <input type="hidden" asp-for="RecipeId" class="form-control"/>

        <div class="row g-3">
            <div class="col">
                <input asp-for="Author" type="text" class="form-control" placeholder="Author" aria-label="Author name">
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="col">
                <input asp-for="Rating" type="text" class="form-control" placeholder="Rating" aria-label="rating">
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="Comment" class="form-label">Comment</label>      
            <textarea rows="5" asp-for="Comment" class="form-control"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
             
        </div>
    
        <div class="mt-3">
            <button type="submit" class="btn btn-warning" aria-label="create">Create</button>
            <a class="btn btn-dark" asp-action="Details" asp-route-id=@Model.RecipeId aria-label="cancel">Cancel</a>
        </div>
    </form>
</div>






@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}